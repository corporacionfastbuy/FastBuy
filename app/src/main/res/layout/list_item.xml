<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"

    >

    <RelativeLayout
        android:layout_width="155dip"
        android:background="@drawable/botonempresa"
        android:layout_alignParentTop="true"
        android:padding="12dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="150dip">


        <ImageView
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imgEmpresas2"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"

            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_height="130dp"
            android:layout_width="130dp" />

        <TextView
            android:text="Nombre_Empresa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtNombreEmpresa"
            android:textColor="@color/gris"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentTop="true"
            android:textSize="18sp"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/imgEmpresas2" />

        <TextView
            android:text="Descripcion de empresa"
            android:layout_height="wrap_content"
            android:id="@+id/txtDescripcion"
            android:textColor="@color/gris"

            android:fontFamily="sans-serif-condensed"
            android:layout_marginLeft="0dp"
            android:layout_below="@+id/txtNombreEmpresa"
            android:layout_alignStart="@+id/txtNombreEmpresa"
            android:layout_width="140dp"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="Abierto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblEstadoAbierto"
            android:textColor="@color/fastbuy"
            android:background="@color/etiqueta"
            android:fontFamily="sans-serif-condensed"
            android:padding="5dp"
            android:layout_below="@+id/txtDescripcion"
            android:layout_alignParentTop="@+id/txtDescripcion"
            android:layout_alignStart="@+id/txtDescripcion" />


    </RelativeLayout>

</RelativeLayout>